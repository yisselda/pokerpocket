{
  "name": "pokerpocket",
  "version": "0.1.0",
  "type": "module",
  "description": "Fast, deterministic Texas Hold'em poker engine for JavaScript/TypeScript",
  "keywords": [
    "poker",
    "texas-holdem",
    "card-games",
    "game-engine",
    "typescript",
    "deterministic"
  ],
  "author": "yisselda",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yisselda/pokerpocket.git"
  },
  "homepage": "https://yisselda.github.io/pokerpocket/",
  "bugs": {
    "url": "https://github.com/yisselda/pokerpocket/issues"
  },
  "bin": {
    "pokerpocket": "dist/cli.js"
  },
  "main": "dist/cli.js",
  "types": "dist/engine.d.ts",
  "exports": {
    ".": {
      "types": "./dist/engine.d.ts",
      "import": "./dist/engine.js"
    },
    "./engine": {
      "types": "./dist/engine.d.ts",
      "import": "./dist/engine.js"
    },
    "./evaluator": {
      "types": "./dist/evaluator.d.ts",
      "import": "./dist/evaluator.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "bench": "vitest run test/bench.test.ts",
    "e2e": "vitest run test/cli.e2e.test.ts",
    "watch:test": "vitest",
    "typecheck:pub": "tsd --files test/types.test-d.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "npm run format:check && npm run lint && npm run build && npm test && npm run typecheck:pub",
    "publish:beta": "npm publish --tag beta",
    "publish:latest": "npm publish"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@types/node": "20.19.17",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "esbuild": "0.25.10",
    "eslint": "9.36.0",
    "execa": "8.0.1",
    "fast-check": "4.3.0",
    "poker-evaluator": "2.1.1",
    "prettier": "3.6.2",
    "tinybench": "2.9.0",
    "tsd": "0.33.0",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=20"
  }
}
