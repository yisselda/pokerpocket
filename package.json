{
  "name": "pokerpocket",
  "version": "0.2.3",
  "private": true,
  "type": "module",
  "description": "Fast, deterministic Texas Hold'em poker engine for JavaScript/TypeScript",
  "keywords": [
    "poker",
    "texas-holdem",
    "card-games",
    "game-engine",
    "typescript",
    "deterministic"
  ],
  "author": "yisselda",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yisselda/pokerpocket.git"
  },
  "homepage": "https://yisselda.github.io/pokerpocket/",
  "bugs": {
    "url": "https://github.com/yisselda/pokerpocket/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "npm --prefix engine run build",
    "dev": "npm run build && node engine/cli.js",
    "play": "npm --prefix engine run play",
    "test": "vitest run engine/tests",
    "bench": "vitest bench engine/tests/engine.bench.ts",
    "watch:test": "vitest --watch engine/tests",
    "typecheck": "tsc -p engine/tsconfig.json --noEmit",
    "format": "prettier --write \"engine/**/*.{ts,tsx,js,json}\" README.md",
    "format:check": "prettier --check \"engine/**/*.{ts,tsx,js,json}\" README.md",
    "sync:readme": "node ./scripts/sync-readme.mjs",
    "lint": "eslint engine/src engine/tests engine/cli.js",
    "lint:fix": "eslint engine/src engine/tests engine/cli.js --fix",
    "prepublishOnly": "npm run sync:readme && npm run format:check && npm run lint && npm run build && npm test && npm run typecheck",
    "publish:beta": "npm run prepublishOnly && node ./scripts/publish-engine.mjs beta",
    "publish:latest": "npm run prepublishOnly && node ./scripts/publish-engine.mjs latest",
    "demo:dev": "npm --prefix demo run dev",
    "demo:build": "npm --prefix demo run build",
    "demo:lint": "npm --prefix demo run lint"
  },
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@types/node": "20.19.17",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "esbuild": "0.25.10",
    "eslint": "9.36.0",
    "execa": "8.0.1",
    "fast-check": "4.3.0",
    "poker-evaluator": "2.1.1",
    "prettier": "3.6.2",
    "tinybench": "2.9.0",
    "tsd": "0.33.0",
    "tsup": "^8.5.0",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "overrides": {
    "source-map": "^0.7.4"
  }
}
